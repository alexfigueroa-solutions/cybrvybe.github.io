{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["dom", "esnext"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "allowJs": true,
      "allowImportingTsExtensions": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "public", ".cache"]
}